<div class="w-full py-6">
  <h1 class="font-bold text-5xl text-center py-8 blue-orange">Aircon Prices</h1>
  <h4 class="text-xl text-center pb-8">Global Aircond provides you aircond services with handsome price.</h4>

  <% if current_user.present? && current_user.is_admin %>
    <%= link_to 'Add Aircon with Price', new_aircon_price_path, class: "text-sm mx-auto w-fit block px-4 py-2 my-6 text-white rounded hover:bg-orange-400 bg-sky-500" %>
  <% end %>

  <div id="aircon_prices" class="container max-w-[1180px] mx-auto">
    <%= render @aircon_prices, current_user: current_user %>
  </div>
</div>
